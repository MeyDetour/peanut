{% extends 'base.html.twig' %}

{% block title %}Add a transaction!{% endblock %}

{% block body %}
    {% include 'component/desktop/header.html.twig'  with {'path':path('app_operations'),'title':"New reccuring operation"} %}
    <div class="d-flex flex-row justify-content-between" id="formPage">
        <div class="p-5 leftPanel">
            {{ form_start(form) }}
            {{ form_row(form.type) }}
            {{ form_row(form.repetition) }}
            {{ form_row(form.addingType) }}
            {{ form_row(form.name) }}
            {{ form_row(form.firstDate) }}
            {{ form_row(form.lastDate) }}
            <div class="d-flex flex-row align-items-center">
                {{ form_widget(form.montant) }} <span class="ms-3 font-size-4">â‚¬</span>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <button class="button1" type="submit">Save</button>
                {% if operation is defined %}
                    <button class="button2"><a href="{{ path('remove_operation',{'id':operation.id}) }}">Delete</a>
                    </button>
                {% endif %}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="rightPanel">
            {% if operation is defined and operation.addingType == 'automatic' %}

            <a href="{{ path('generate_operation',{'id':operation.id}) }}">Generate operations</a>
            <a href="{{ path('remove_operations_transaction',{'id':operation.id}) }}">Remove all transaction created</a>

     {% endif%}   </div>
    </div>


{% endblock %}
