<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>

        :root {
            --dash: #131313;
            --primary-color: #C40047;
            --grey-2: #929292;
        }

        body {
            padding: 40px;
        }

        header {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: var(--primary-color);
            font-size: 42px
        }

        h2 {
            font-size: 24px;
        }

        .identityPeanut {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .identityPeanut img {
            width: 20vw;
            border-color: var(--dash);
        }


        /*========TABLE===========*/
        .tableContainer {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 80%;
        }

        table {
            width: 100%;
            margin-bottom: 50px;
            margin-top: 10px;
            border-collapse: collapse;
            border: 2px solid rgb(140 140 140);
            font-family: sans-serif;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        caption {
            caption-side: bottom;
            padding: 10px;
            font-weight: bold;
            color: var(--grey-2);
        }

        thead,
        tfoot {
            background-color: rgb(228 240 245);
        }

        thead th, h3 {
            color: var(--primary-color);
            font-size: 20px;
        }

        th,
        td {
            border: 1px solid rgb(160 160 160);
            padding: 8px 10px;

        }

        td:last-of-type {
            text-align: center;
        }

        tbody > tr:nth-of-type(even) {
            background-color: rgb(237 238 242);
        }

        tfoot th {
            text-align: right;
        }

        tfoot td {
            font-weight: bold;
        }

        hr {
            width: 80%;
        }

        /*===============PAYMENTS==============*/
        #paymentsContainer {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 80%;
        }

        .hr {
            height: 100%;
            width: 2px;
            background: var(--grey-2);
        }

        #paymentsContainer > .left, #paymentsContainer > .right {
            display: flex;
            flex-direction: column;
            width: 40%;
        }
    </style>
</head>
<body>
<header>
    <div class="identityPeanut">

        <h1>Peanut</h1> <img loading="eager" src="{{ absolute_url('/pictures/peanutLogo.png') }}" alt="icon peanut">
    </div>

    <hr>
    <h2>Summary of expenses </h2>
    <hr>
    {% for index,datum in data %}
        <div class="tableContainer">
            <h1>{{ index }}</h1>
            <table>
                {% if incomeOutcome %}

                    <caption>
                        Summary of expenses for the year {{ index }}
                    </caption>
                    <thead>
                    <tr>
                        <th scope="col">Months</th>
                        <th scope="col">Average</th>
                        <th scope="col">Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for index,datum2 in  datum.months %}

                        <tr>
                            <th scope="row">{{ months[index] }}</th>
                            <th scope="row">{{ datum2.total/datum2.number }}</th>
                            <th scope="row">{{ datum2.total }}</th>
                        </tr>
                    {% endfor %}


                    </tbody>
                {% endif %}
                <tfoot>
                <tr>
                    <th scope="row" colspan="2">Total of year</th>
                    <td>{{ datum.total }}</td>
                </tr>
                </tfoot>
            </table>

        </div>

    {% endfor %}

    <hr>
    <h2>Wallets and credits cards</h2>
    <hr>
    <div id="paymentsContainer">
        <div class="left">
            {% for pay in payments %}
                {% if pay.type =='card' %}
                    {% if walletName %}

                        <h3>{{ pay.name }}</h3>
                    {% else %}
                        <h3>Credit card {{ loop.index }}</h3>
                    {% endif %}
                    <span>Utilisation : {{ pay.getTransactions|length }}</span>
                {% endif %}
            {% endfor %}
        </div>
        <div class="hr"></div>
        <div class="right">
            {% for pay in payments %}
                {% if pay.type =='cash' %}
                    {% if walletName %}
                        <h3>{{ pay.name }}</h3>
                    {% else %}
                        <h3>Credit card {{ loop.index }}</h3>
                    {% endif %}
                    <span>Utilisation : {{ pay.getTransactions|length }}</span>
                {% endif %}
            {% endfor %}
        </div>
    </div>

</header>

</body>
</html>